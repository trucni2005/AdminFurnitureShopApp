<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="6dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/image_category"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/facebook_button">
        </ImageView>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:padding="6dp"
                android:id="@+id/tv_name_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#376553"
                android:textSize="19sp"
                android:textStyle="bold"></TextView>

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_edit_category"
                    android:layout_width="90dp"
                    android:layout_height="43dp"
                    android:text="EDIT"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginRight="15dp"
                    android:textColor="#fff"
                    android:paddingEnd="4dp"
                    android:drawableEnd="@drawable/ic_baseline_edit_24"
                    android:backgroundTint="#1e5bf8"
                    android:textSize="12sp">
                </Button>
                <Button
                    android:id="@+id/btn_delete_category"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:text="DELETE"
                    android:fontFamily="@font/poppins_semibold"
                    android:drawableEnd="@drawable/ic_baseline_delete_24"
                    android:backgroundTint="#fe6464"
                    android:paddingEnd="4dp"
                    android:textColor="#fff"
                    android:textSize="12sp">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>